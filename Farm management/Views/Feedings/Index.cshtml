@model IEnumerable<Farm_management.Models.Feeding>

@{
    ViewData["Title"] = "جدول التغذية اليومي";
}

<style>
    body {
        background-image: url('/css/images/imge11.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .table-container {
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }
</style>

<div class="container-fluid mt-4">
    <div class="main-content-wrapper shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark"><i class="bi bi-egg-fill text-warning"></i> إدارة التغذية اليومية</h2>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-plus-circle"></i> إضافة جدول تغذية
            </a>
        </div>

        <div class="table-container shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-center">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4 text-start">الحظيرة</th>
                            <th>نوع العلف</th>
                            <th>عدد الوجبات</th>
                            <th>الوزن/الوجبة</th>
                            <th>مواعيد الإطعام</th>
                            <th class="text-center">العمليات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-start align-middle">
                                    <strong>@item.Barn?.Name</strong>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-info text-dark">@item.FoodType</span>
                                </td>
                                <td class="align-middle">@item.MealsCount وجبات</td>
                                <td class="align-middle fw-bold text-success">@item.SingleMealWeight كجم</td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(item.MealTimesJson))
                                    {
                                        var times = item.MealTimesJson.Split(',');
                                        foreach (var time in times)
                                        {
                                            <span class="badge rounded-pill border border-primary text-primary me-1">
                                                <i class="bi bi-clock"></i> @time.Trim()
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">لا يوجد مواعيد</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                            تعديل
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            تفاصيل
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            حذف
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center mt-5 py-4 bg-white rounded-3 shadow-sm">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-2">لا يوجد جداول تغذية مضافة حالياً.</p>
            </div>
        }
    </div>
</div>