@model IEnumerable<Farm_management.Models.Feeding>

@{
    ViewData["Title"] = "جدول التغذية اليومي";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark"><i class="bi bi-egg-fill text-warning"></i> إدارة التغذية</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> إضافة جدول تغذية
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">الحظيرة</th>
                        <th>نوع العلف</th>
                        <th>عدد الوجبات</th>
                        <th>الوزن/الوجبة</th>
                        <th>مواعيد الإطعام</th>
                        <th class="text-center">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 align-middle">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                                        @item.Barn?.Name.Substring(0, 1)
                                    </div>
                                    <strong>@item.Barn?.Name</strong>
                                </div>
                            </td>
                            <td class="align-middle"><span class="badge bg-info text-dark">@item.FoodType</span></td>
                            <td class="align-middle text-center">@item.MealsCount وجبات</td>
                            <td class="align-middle fw-bold text-success">@item.SingleMealWeight كجم</td>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(item.MealTimesJson))
                                {
                                    var times = item.MealTimesJson.Split(',');
                                    foreach (var time in times)
                                    {
                                        <span class="badge rounded-pill border border-primary text-primary me-1">
                                            <i class="bi bi-clock-history"></i> @time.Trim()
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">لا يوجد مواعيد</span>
                                }
                            </td>
                            <td class="text-center align-middle">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="تعديل">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
        <p class="text-muted">لا يوجد جداول تغذية مضافة حالياً.</p>
    </div>
}