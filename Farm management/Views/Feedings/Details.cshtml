@model Farm_management.Models.Feeding

@{
    ViewData["Title"] = "تفاصيل التغذية";
}

<style>
    body {
        background-image: url('/css/images/imge12.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    dt {
        color: #0d6efd;
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 800px;">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <h2 class="fw-bold"><i class="bi bi-info-square-fill text-primary"></i> تفاصيل جدول التغذية</h2>
            <span class="badge bg-success fs-6">حظيرة: @Model.Barn?.Name</span>
        </div>

        <div class="row">
            <dl class="row fs-5">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Barn)</dt>
                <dd class="col-sm-8 fw-bold text-dark">@Html.DisplayFor(model => model.Barn.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FoodType)</dt>
                <dd class="col-sm-8"><span class="badge bg-info text-dark">@Html.DisplayFor(model => model.FoodType)</span></dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MealsCount)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MealsCount) وجبات يومياً</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SingleMealWeight)</dt>
                <dd class="col-sm-8 text-success fw-bold">@Html.DisplayFor(model => model.SingleMealWeight) كجم</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MealTimesJson)</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.MealTimesJson))
                    {
                        var times = Model.MealTimesJson.Split(',');
                        foreach (var time in times)
                        {
                            <span class="badge rounded-pill border border-primary text-primary me-1">
                                <i class="bi bi-clock"></i> @time.Trim()
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">لا توجد مواعيد محددة</span>
                    }
                </dd>
            </dl>
        </div>

        <hr />
        <div class="d-flex gap-2 justify-content-end">
            <div class="btn-group shadow-sm">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">تعديل</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">العودة للقائمة</a>
            </div>
        </div>
    </div>
</div>