@model Farm_management.Models.Feeding

@{
    ViewData["Title"] = "تعديل نظام التغذية";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark p-3">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> تعديل بيانات التغذية - @Model.Barn?.Name</h4>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-4">
                    <div class="col-md-4">
                        <label asp-for="BarnId" class="form-label fw-bold">الحظيرة</label>
                        <select asp-for="BarnId" class="form-select border-warning" asp-items="ViewBag.BarnId"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="FoodType" class="form-label fw-bold">نوع العلف</label>
                        <input asp-for="FoodType" class="form-control border-warning" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="SingleMealWeight" class="form-label fw-bold">الوزن/وجبة (كجم)</label>
                        <input asp-for="SingleMealWeight" class="form-control border-warning" type="number" step="0.1" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="p-3 bg-white rounded shadow-sm border-start border-4 border-primary">
                            <label asp-for="MealsCount" class="form-label fw-bold">عدد الوجبات</label>
                            <input type="number" id="MealsCountInput" asp-for="MealsCount" class="form-control form-control-lg" min="1" max="6" />
                        </div>
                    </div>
                </div>

                <hr />
                <h5 class="text-secondary mb-3"><i class="bi bi-clock"></i> مواعيد الوجبات المسجلة</h5>

                <div id="MealsTimesContainer" class="row">
                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">إلغاء</a>
                    <button type="submit" class="btn btn-warning px-5 shadow">تحديث البيانات</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 1. جلب البيانات القديمة من السيرفر وتحويلها لمصفوفة
            var existingTimes = "@Model.MealTimesJson".split(',').map(s => s.trim());

            function renderTimeInputs(count, values = []) {
                var container = $('#MealsTimesContainer');
                container.empty();
                for (var i = 1; i <= count; i++) {
                    var timeValue = values[i-1] || ""; // وضع الوقت القديم إذا وجد
                    var html = `
                        <div class="col-md-4 mb-3">
                            <div class="card p-3 border-warning shadow-sm text-center">
                                <label class="fw-bold text-dark mb-2">وجبة رقم ${i}</label>
                                <input type="time" name="mealTimes" class="form-control" value="${timeValue}" required />
                            </div>
                        </div>`;
                    container.append(html);
                }
            }

            // تشغيل الدالة فور فتح الصفحة بالبيانات القديمة
            renderTimeInputs($('#MealsCountInput').val(), existingTimes);

            // تحديث الخانات إذا قام المستخدم بتغيير العدد
            $('#MealsCountInput').on('input change', function () {
                renderTimeInputs($(this).val());
            });
        });
    </script>
}