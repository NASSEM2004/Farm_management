@model Farm_management.Models.Feeding

@{
    ViewData["Title"] = "حذف جدول التغذية";
}

<style>
    body {
        background-image: url('/css/images/imge13.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

    .warning-box {
        background-color: #fff5f5;
        border-right: 5px solid #dc3545;
        padding: 15px;
        margin-bottom: 25px;
        border-radius: 5px;
    }

    dt {
        color: #555;
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 800px;">

        <div class="warning-box shadow-sm text-end">
            <h3 class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> هل أنت متأكد من حذف جدول التغذية؟</h3>
            <p class="text-muted mb-0">سيؤدي هذا الإجراء إلى إزالة خطة التغذية الخاصة بهذه الحظيرة نهائياً.</p>
        </div>

        <div class="row px-3 text-end" style="direction: rtl;">
            <h4 class="mb-4 border-bottom pb-2">تفاصيل الجدول المراد حذفه:</h4>
            <dl class="row fs-6">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Barn)</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Barn.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FoodType)</dt>
                <dd class="col-sm-8 text-primary">@Html.DisplayFor(model => model.FoodType)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MealsCount)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MealsCount) وجبات</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SingleMealWeight)</dt>
                <dd class="col-sm-8 text-success">@Html.DisplayFor(model => model.SingleMealWeight) كجم</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MealTimesJson)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MealTimesJson)</dd>
            </dl>
        </div>

        <hr />

        <form asp-action="Delete" class="d-flex gap-2 justify-content-end align-items-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="تأكيد الحذف" class="btn btn-danger shadow-sm px-4" />
            <span class="text-muted mx-2">|</span>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
                إلغاء والعودة
            </a>
        </form>
    </div>
</div>