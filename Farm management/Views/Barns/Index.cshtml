@model IEnumerable<Farm_management.Models.Barns>

@{
    ViewData["Title"] = "قائمة الحظائر";
}

<style>
    body {
        background-image: url('/css/images/imge4.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
</style>

<div class="container-fluid mt-4">
    <div class="main-content-wrapper shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark"><i class="bi bi-house-door"></i> إدارة الحظائر</h2>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-plus-circle"></i> إضافة حظيرة جديدة
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle bg-white rounded overflow-hidden shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>اسم الحظيرة</th>
                        <th>التخصص (نوع الحياة)</th>
                        <th class="text-center">عدد الحيوانات الحالي (الحالي/السعة)</th>
                        <th class="text-center">العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td>
                                <span class="badge bg-secondary">@item.kindOfLife</span>
                            </td>
                            <td class="text-center">
                                @{
                                    var currentCount = item.Animals?.Count ?? 0;
                                    var badgeClass = currentCount >= item.Capacity ? "badge bg-danger" : "badge bg-success";
                                }
                                <span class="@badgeClass shadow-sm" style="font-size: 0.95rem; min-width: 80px;">
                                    <i class="bi bi-person-badge"></i> @currentCount / @item.Capacity
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">تعديل</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">تفاصيل</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>