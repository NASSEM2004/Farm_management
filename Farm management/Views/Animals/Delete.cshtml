@model Farm_management.Models.Animals

@{
    ViewData["Title"] = "حذف حيوان";
}

<style>
    body {
        /* تأكد من امتداد الصورة الصحيح .jpg أو .png */
        background-image: url('/css/images/imge3.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(220, 53, 69, 0.2); /* حدود مائلة للأحمر للتحذير */
    }

    .warning-box {
        background-color: #fff5f5;
        border-right: 5px solid #dc3545;
        padding: 15px;
        margin-bottom: 25px;
        border-radius: 5px;
    }

    dt {
        color: #555;
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 800px;">

        <div class="warning-box shadow-sm">
            <h3 class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> هل أنت متأكد من الحذف؟</h3>
            <p class="text-muted mb-0">لا يمكن التراجع عن هذا الإجراء بعد إتمامه.</p>
        </div>

        <div class="row px-3">
            <h4 class="mb-4 border-bottom pb-2">بيانات الحيوان المراد حذفه:</h4>
            <dl class="row fs-5">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8 text-dark fw-bold">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Species)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Species)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Age) سنة
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-8">
                    @if (Model.Gender == "ذكر")
                    {
                        <span class="badge bg-info text-dark">@Model.Gender</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">@Model.Gender</span>
                    }
                </dd>

                <dt class="col-sm-4">
                    الحظيرة
                </dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Model.Barn?.Name</span>
                </dd>
            </dl>
        </div>

        <hr />

        <form asp-action="Delete" class="d-flex gap-2 justify-content-end">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger shadow-sm px-4">
                <i class="bi bi-trash"></i> تأكيد الحذف النهائى
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
                <i class="bi bi-x-circle"></i> إلغاء
            </a>
        </form>
    </div>
</div>