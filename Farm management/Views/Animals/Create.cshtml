@model Farm_management.Models.Animals

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">نوع الحيوان</label>
                <select asp-for="Name" class="form-control" asp-items="ViewBag.AnimalTypes">
                    <option value="">-- اختر النوع --</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BarnId" class="control-label"></label>
                <select asp-for="BarnId" class ="form-control" asp-items="ViewBag.BarnId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @* 1. استدعاء ملفات التحقق الجاهزة *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @* 2. كود الفلترة الذكية *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // نراقب التغيير في خانة اسم الحيوان (النوع)
            $('#Name').change(function () {
                var selectedKind = $(this).val();
                var barnSelect = $('#BarnId');

                // تنظيف القائمة الحالية
                barnSelect.empty();
                barnSelect.append('<option value="">-- جاري التحميل... --</option>');

                if (selectedKind) {
                    $.ajax({
                        url: '@Url.Action("GetBarnsByKind", "Animals")',
                        type: 'GET',
                        data: { kind: selectedKind },
                        success: function (data) {
                            barnSelect.empty();
                            barnSelect.append('<option value="">-- اختر حظيرة مناسبة --</option>');
                            $.each(data, function (i, barn) {
                                barnSelect.append('<option value="' + barn.id + '">' + barn.name + '</option>');
                            });
                        },
                        error: function () {
                            alert('حدث خطأ أثناء جلب الحظائر');
                        }
                    });
                } else {
                    barnSelect.empty();
                    barnSelect.append('<option value="">-- اختر النوع أولاً --</option>');
                }
            });
        });
    </script>
}