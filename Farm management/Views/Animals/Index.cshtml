@model IEnumerable<Farm_management.Models.Animals>

@{
    ViewData["Title"] = "قائمة الحيوانات";
}

<style>
    body {
        /* إعداد الصورة كخلفية للصفحة */
        background-image: url('~/css/images/imge1.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    /* إضافة طبقة شفافة خفيفة خلف الحاوية لضمان وضوح البيانات */
    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        padding: 20px;
        margin-top: 20px;
        backdrop-filter: blur(5px); /* تأثير ضبابي جمالي للخلفية */
    }
</style>

<div class="container-fluid mt-4">
    <div class="main-content-wrapper shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-list-stars"></i> إدارة الحيوانات</h2>
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> إضافة حيوان جديد
            </a>
        </div>

        <table class="table table-hover align-middle shadow-sm bg-white rounded overflow-hidden">
            <thead class="table-dark">
                <tr>
                    <th>رقم الحيوان (ID)</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Species)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        الحظيرة
                    </th>
                    <th class="text-center">العمليات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-primary">
                            #@item.Id
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Species)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @if (item.Gender == "ذكر")
                            {
                                <span class="badge bg-info text-dark">@item.Gender</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white">@item.Gender</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-secondary">@item.Barn?.Name</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">تعديل</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">تفاصيل</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>