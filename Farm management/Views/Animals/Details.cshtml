@model Farm_management.Models.Animals

@{
    ViewData["Title"] = "تفاصيل الحيوان";
}

<style>
    body {
        /* تأكد من امتداد الصورة الصحيح .jpg أو .png */
        background-image: url('/css/images/imge2.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9); /* شفافية مريحة للعين */
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    dt {
        color: #0d6efd; /* لون أزرق للعناوين الجانبية */
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 800px;">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <h2 class="fw-bold"><i class="bi bi-info-circle"></i> تفاصيل الحيوان</h2>
            <span class="badge bg-primary fs-6">رقم التعريف: #@Model.Id</span>
        </div>

        <div class="row">
            <dl class="row fs-5">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8 text-dark">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Species)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Species)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Age) سنة
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-8">
                    @if (Model.Gender == "ذكر")
                    {
                        <span class="badge bg-info text-dark">@Model.Gender</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">@Model.Gender</span>
                    }
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Barn)
                </dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Model.Barn?.Name</span>
                </dd>
            </dl>
        </div>

        <hr />
        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning shadow-sm">
                <i class="bi bi-pencil-square"></i> تعديل البيانات
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>