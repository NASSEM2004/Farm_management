@model Farm_management.Models.Clinic

@{
    ViewData["Title"] = "إضافة سجل طبي جديد";
}

<style>
    body {
        background-image: url('/css/images/imge21.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-container {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        padding: 25px;
    }
</style>

<div class="container mt-4 main-container">
    <div class="card shadow-lg border-0">
        @* الهيدر باللون الأزرق لعملية الإضافة *@
        <div class="card-header bg-primary text-white p-3">
            <h4 class="mb-0"><i class="bi bi-plus-square-fill me-2"></i> تسجيل حالة طبية جديدة</h4>
        </div>

        <div class="card-body bg-light">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* القسم الأول: الحيوان والحظيرة *@
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <label asp-for="AnimalId" class="form-label fw-bold">رقم الحيوان</label>
                        <input asp-for="AnimalId" class="form-control border-primary shadow-sm" placeholder="أدخل رقم الحيوان المعني..." type="number" />
                        <span asp-validation-for="AnimalId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="BarnId" class="form-label fw-bold">حظيرة العزل/العيادة</label>
                        <select asp-for="BarnId" class="form-select border-primary shadow-sm" asp-items="ViewBag.BarnId">
                            <option value="">-- اختر الحظيرة --</option>
                        </select>
                        <span asp-validation-for="BarnId" class="text-danger"></span>
                    </div>
                </div>

                @* القسم الثاني: التشخيص والعلاج (تصميم الصناديق الجانبية) *@
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="p-3 bg-white rounded shadow-sm border-start border-4 border-danger h-100">
                            <label asp-for="Diagnosis" class="form-label fw-bold text-danger">التشخيص المبدئي</label>
                            <input asp-for="Diagnosis" class="form-control border-danger" placeholder="وصف الحالة المرضية..." />
                            <span asp-validation-for="Diagnosis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-white rounded shadow-sm border-start border-4 border-info h-100">
                            <label asp-for="Medications" class="form-label fw-bold text-info">البروتوكول العلاجي</label>
                            <input asp-for="Medications" class="form-control border-info" placeholder="الأدوية المقررة..." />
                            <span asp-validation-for="Medications" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @* القسم الثالث: التفاصيل والجرعات *@
                <div class="row mb-4">
                    <div class="col-md-8 mb-3">
                        <label asp-for="Details" class="form-label fw-bold">تفاصيل إضافية</label>
                        <input asp-for="Details" class="form-control border-primary shadow-sm" placeholder="أي ملاحظات أخرى عن سلوك الحيوان..." />
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DoseFrequency" class="form-label fw-bold text-dark">عدد الجرعات/اليوم</label>
                        <input asp-for="DoseFrequency" class="form-control border-primary shadow-sm text-center fw-bold" placeholder="مثلاً: مرتان يومياً" />
                        <span asp-validation-for="DoseFrequency" class="text-danger"></span>
                    </div>
                </div>

                @* القسم الرابع: التواريخ والحالة *@
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <label asp-for="EntryDate" class="form-label fw-bold">تاريخ دخول العيادة</label>
                        <input asp-for="EntryDate" class="form-control border-primary shadow-sm" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold">تاريخ الخروج المتوقع</label>
                        <input asp-for="EndDate" class="form-control border-primary shadow-sm" type="datetime-local" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Status" class="form-label fw-bold">الحالة الصحية الحالية</label>
                        <select asp-for="Status" class="form-select border-primary shadow-sm">
                            <option value="قيد العلاج">قيد العلاج</option>
                            <option value="تحت الملاحظة">تحت الملاحظة</option>
                            <option value="حالة حرجة">حالة حرجة</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                @* الأزرار *@
                <div class="form-group mt-4 text-end border-top pt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 me-2">إلغاء</a>
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow fw-bold">حفظ السجل الطبي</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}