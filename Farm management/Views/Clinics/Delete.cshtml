@model Farm_management.Models.Clinic

@{
    ViewData["Title"] = "حذف حالة مرضية";
}

<style>
    body {
        background-image: url('/css/images/imge9.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

    .warning-box {
        background-color: #fff5f5;
        border-right: 5px solid #dc3545;
        padding: 15px;
        margin-bottom: 25px;
        border-radius: 5px;
    }

    dt {
        color: #555;
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 900px;">

        <div class="warning-box shadow-sm">
            <h3 class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> هل أنت متأكد من حذف هذه الحالة؟</h3>
            <p class="text-muted mb-0">سيتم إزالة السجل الطبي لهذه الحالة بشكل نهائي من قاعدة البيانات.</p>
        </div>

        <div class="row px-3">
            <h4 class="mb-4 border-bottom pb-2">تفاصيل السجل الطبي:</h4>
            <dl class="row fs-6">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Animal)</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Animal.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Diagnosis)</dt>
                <dd class="col-sm-8 text-danger">@Html.DisplayFor(model => model.Diagnosis)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Details)</dt>
                <dd class="col-sm-8 small">@Html.DisplayFor(model => model.Details)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Medications)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Medications)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EntryDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EntryDate)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Barn)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Barn.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Status)</span>
                </dd>
            </dl>
        </div>

        <hr />

        <form asp-action="Delete" class="d-flex gap-2 justify-content-end align-items-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف الحالة" class="btn btn-danger shadow-sm" />
            <span class="text-muted mx-2">|</span>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                العودة للقائمة
            </a>
        </form>
    </div>
</div>

---
