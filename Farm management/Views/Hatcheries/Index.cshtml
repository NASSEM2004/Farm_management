@model IEnumerable<Farm_management.Models.Hatchery>

@{
    ViewData["Title"] = "سجل عمليات التفريخ";
}

<style>
    body {
        background-image: url('/css/images/imge14.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .table-container {
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }
</style>

<div class="container-fluid mt-4">
    <div class="main-content-wrapper shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-dark fw-bold"><i class="bi bi-moisture text-primary"></i> إدارة عمليات التفريخ والإنتاج</h2>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-plus-circle"></i> بدء عملية جديدة
            </a>
        </div>

        <div class="table-container shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>رقم العملية</th>
                            <th>الذكر</th>
                            <th>الأنثى</th>
                            <th>حظيرة الإنتاج</th>
                            <th>وقت الإدخال</th>
                            <th>الإنتاج المتوقع</th>
                            <th>الحالة</th>
                            <th>العمليات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">#@item.Id</td>

                                <td>
                                    <div class="fw-bold text-primary">@item.MaleAnimal?.Species</div>
                                    <div class="small text-muted">ID: @item.MaleAnimalId</div>
                                </td>

                                <td>
                                    <div class="fw-bold text-danger">@item.FemaleAnimal?.Species</div>
                                    <div class="small text-muted">ID: @item.FemaleAnimalId</div>
                                </td>

                                <td>
                                    <span class="badge bg-secondary">@item.ProductionBarn?.Name</span>
                                </td>

                                <td class="small">@item.StartDate.ToString("yyyy/MM/dd HH:mm")</td>

                                <td class="small fw-bold">
                                    @item.ExpectedEndDate.ToString("yyyy/MM/dd HH:mm")
                                </td>

                                <td>
                                    <span class="badge rounded-pill @(item.Status == "مكتملة" ? "bg-success" : "bg-warning text-dark")">
                                        @item.Status
                                    </span>
                                </td>

                                <td>
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">تعديل</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">تفاصيل</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>