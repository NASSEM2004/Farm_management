@model IEnumerable<Farm_management.Models.Hatchery>

@{
    ViewData["Title"] = "سجل عمليات التفريخ";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold"><i class="bi bi-moisture text-primary"></i> إدارة عمليات التفريخ والإنتاج</h2>
        <a asp-action="Create" class="btn btn-primary shadow">
            <i class="bi bi-plus-circle"></i> بدء عملية جديدة
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white text-center">
                    <tr>
                        <th>رقم العملية</th>
                        <th class="bg-primary bg-opacity-75">الذكر (الفصيلة - الرقم)</th>
                        <th class="bg-danger bg-opacity-75">الأنثى (الفصيلة - الرقم)</th>
                        <th>حظيرة الإنتاج</th>
                        <th>وقت الإدخال</th>
                        <th>توقيت الإنتاج المتوقع</th>
                        <th>الحالة</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>#@item.Id</strong></td>

                            <td class="border-start border-primary border-3">
                                <div class="fw-bold text-primary">@item.MaleAnimal?.Species</div>
                                <div class="small text-muted">ID: @item.MaleAnimalId</div>
                            </td>

                            <td class="border-start border-danger border-3">
                                <div class="fw-bold text-danger">@item.FemaleAnimal?.Species</div>
                                <div class="small text-muted">ID: @item.FemaleAnimalId</div>
                            </td>

                            <td>
                                <span class="badge bg-secondary">@item.ProductionBarn?.Name</span>
                            </td>

                            <td class="small">@item.StartDate.ToString("yyyy/MM/dd HH:mm")</td>

                            <td class="small fw-bold">
                                @item.ExpectedEndDate.ToString("yyyy/MM/dd HH:mm")
                            </td>

                            <td>
                                <span class="badge rounded-pill @(item.Status == "مكتملة" ? "bg-success" : "bg-warning text-dark")">
                                    @item.Status
                                </span>
                            </td>

                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>