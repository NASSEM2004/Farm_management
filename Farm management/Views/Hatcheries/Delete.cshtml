@model Farm_management.Models.Hatchery

@{
    ViewData["Title"] = "حذف سجل التفريخ";
}

<style>
    body {
        background-image: url('/css/images/imge16.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .main-content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin-top: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

    .delete-warning {
        background-color: #fff5f5;
        border-right: 5px solid #dc3545;
        padding: 15px;
        margin-bottom: 25px;
        border-radius: 5px;
    }

    dt {
        color: #555;
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="main-content-wrapper mx-auto" style="max-width: 850px;">

        <div class="delete-warning shadow-sm text-end" style="direction: rtl;">
            <h3 class="text-danger fw-bold"><i class="bi bi-trash3-fill"></i> تأكيد حذف عملية التفريخ</h3>
            <p class="text-muted mb-0">هل أنت متأكد من رغبتك في حذف هذا السجل؟ هذا الإجراء لا يمكن التراجع عنه.</p>
        </div>

        <div class="row px-3 text-end" style="direction: rtl;">
            <h4 class="mb-4 border-bottom pb-2 text-dark">بيانات العملية:</h4>
            <dl class="row fs-6">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaleAnimal)</dt>
                <dd class="col-sm-8 fw-bold text-primary">@Html.DisplayFor(model => model.MaleAnimal.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FemaleAnimal)</dt>
                <dd class="col-sm-8 fw-bold text-danger">@Html.DisplayFor(model => model.FemaleAnimal.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductionBarn)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductionBarn.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StartDate)</dt>
                <dd class="col-sm-8 text-muted">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ExpectedEndDate)</dt>
                <dd class="col-sm-8 text-success fw-bold">@Html.DisplayFor(model => model.ExpectedEndDate)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Status)</span>
                </dd>
            </dl>
        </div>

        <hr />

        <form asp-action="Delete" class="d-flex gap-2 justify-content-end align-items-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف السجل نهائياً" class="btn btn-danger shadow-sm px-4" />
            <span class="text-muted mx-2">|</span>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
                إلغاء والعودة للقائمة
            </a>
        </form>
    </div>
</div>

---
